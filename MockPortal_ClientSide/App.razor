@* <CascadingBlazoredModal> *@
    <Router AppAssembly="@typeof(Program).Assembly" AdditionalAssemblies="new[] { typeof(MockPortal_Components.Shared.NavMenu).Assembly }">
        <Found Context="routeData">
            <RouteView RouteData="@routeData" DefaultLayout="@typeof(MockPortal_Components.Shared.MainLayout)" />
        </Found>
        <NotFound>
            <LayoutView Layout="@typeof(MockPortal_Components.Shared.MainLayout)">
                <p>Sorry, there's nothing at this address.</p>
            </LayoutView>
        </NotFound>
    </Router>
@* </CascadingBlazoredModal> *@